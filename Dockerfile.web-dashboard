FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY nest-cli.json ./
COPY tsconfig*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY apps/web-dashboard ./apps/web-dashboard
COPY libs ./libs

# Build the application
RUN npm run build:web-dashboard

# Expose port
EXPOSE 3003

# Start the application
CMD ["node", "dist/apps/web-dashboard/main.js"]



